<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Splash Screen Theme. -->
<!--    <style name="Theme.AppSplash" parent="Theme.SplashScreen.Common">-->
    <style name="Theme.AppSplash" parent="Theme.AppCompat">
        <item name="windowSplashScreenBackground">@mipmap/ic_launcher</item>
        <item name="splashScreenIconSize">120dp</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Hisaab</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- System Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/white</item>
         <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- System Navigation bar color. -->
        <item name="android:windowTranslucentNavigation">true</item>

    </style>
</resources>